<div class="container custom-container">
<!-- START content -->
<div class="row">
  <div id="title" class="col-md-8">
    <% if @video.title %>
      <%= @video.title %>
    <% else %>
      <div id="movie-title">
        <%= form_for(@video) do |f| %>
          <div class="form-group">
          <%= f.text_field 'title', remote: true, autocomplete: :off,  class: "form-control input-lg" %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div> 

  <div id="filter-works" class="row">
    <ul>
      <li class="active"><a href="#" data-filter=".bookmarks">Bookmarks</a></li> 
      <li><a href="#" data-filter=".notes">My Notes</a></li> 
    </ul>
  </div>
</div>
<div class="row">

  <!-- START video -->
  <div class="col-md-8">
    <video id="the_video" data-id="<%= @video.id %>" class="video-js vjs-default-skin" controls
     preload="auto" width="700px" height="400px" >
     <source src="<%= @video.url %>" type='video/mp4'>
     <p class="vjs-no-js">To view this video please enable JavaScript, and consider upgrading to a web browser that <a href="http://videojs.com/html5-video-support/" target="_blank">supports HTML5 video</a></p>
    </video>
  </div>
  <!-- START video -->


  <!--  START notes and bookmark filters  -->
  <div class="col-md-4">
    <!-- START notes -->
      <% if current_user %>
      <div class="row">
        <div id="notes" class="container">
          <%= render @notes %>
        </div>
      </div>
    
      <div class="row">
        <form id="contact-form" class="create-note custom-item notes">
          <div class="form-group">
            <div class="controls">
              <textarea id="contact-message" name="note-text"  placeholder="Add a note..." class="form-control requiredField label_better" rows="3"></textarea>
              <i class="fa fa-comment"></i>
            </div>
          </div>
        
          <p><button name="submit" type="submit" class="btn btn-qubico btn-block"><i class="fa fa-location-arrow"></i>Submit</button></p>
        </form>
      </div>
      <% else %>    
      <div class="row">  
        <div class="note news-content no-tip col-md-12 custom-item notes">
          <%= link_to "Login to add notes.", '/auth/github' %>
        </div>
      </div>
      <% end %>
    <!-- END notes -->


    <!-- START bookmarks -->
    <div class="row">
      <div id="bookmarks" class="container custom-item bookmarks">
        <%= render @bookmarks %>
      </div>
    </div>
    
    <% if current_user %>
    <div class="row">
      <form id="create-bookmark" class="custom-item bookmarks">
        <p>
          <input type="text" name="title" placeholder="Bookmark title">
        </p>
        <p>
          <input type="submit" value="Create Bookmark"></input>
        </p>
      </form>
    </div>
    <% else %>    
    <div class="row">  
      <div class="note news-content no-tip col-md-12 custom-item bookmarks">
        <%= link_to "Login to add bookmarks.", '/auth/github' %>
      </div>
    </div>
    <% end %>
    <!-- END bookmarks -->
  
  </div>
  <!-- END notes and bookmark filters -->
    
</div>
<!-- END content -->
</div>

