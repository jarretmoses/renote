<div data-id="<%= note.id %>" data-video="<%= note.video.id %>" class="news-item custom-item notes">
  <div class="row">  
    <div class="note news-content no-tip col-md-4">
      <%= link_to '✎', '#', class: 'edit-note-button', title: 'Edit Note' %>
      <%= link_to '✗', delete_note_path(note.video, note), remote: true, method: :delete, class: 'delete-note-button', title: 'Delete Note' %>
      
        <span class="note-content"><%= markdown(note.content) %></span>
    </div>
  </div>
</div>